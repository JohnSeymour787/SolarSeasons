<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SolarSeasons" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/uv_low</item>
        <item name="colorPrimaryVariant">@color/uv_low</item>
        <item name="colorOnPrimary">@color/light_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/uv_moderate</item>
        <item name="colorSecondaryVariant">@color/uv_moderate</item>
        <item name="colorOnSecondary">@color/dark_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/quicksand_medium</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorAccent">@color/uv_low</item>
    </style>

    <style name="ThemeOverlay.SolarSeasons.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">?android:colorPrimary</item>
        <item name="appWidgetTextColor">?android:textColorPrimary</item>
    </style>
</resources>