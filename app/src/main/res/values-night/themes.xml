<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SolarSeasons" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colour -->
        <item name="colorPrimary">@color/uv_low</item>
        <item name="android:textColorPrimary">@color/light_text</item>
        <!-- Secondary brand colour. -->
        <item name="colorSecondary">@color/uv_moderate</item>
        <item name="android:textColorSecondary">@color/light_text</item>
        <!-- Status bar colour and style -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="fontFamily">@font/quicksand_medium</item>

        <item name="preferenceTheme">@style/Theme.App.Preferences</item>

        <item name="colorAccent">@color/uv_low</item>

        <item name="android:windowBackground">@color/dark_window_background</item>
    </style>

    <style name="ThemeOverlay.SolarSeasons.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/dark_window_background</item>
        <item name="appWidgetTextColor">@color/light_text</item>
    </style>

    <style name="Theme.App.Preferences" parent="PreferenceThemeOverlay">
        <item name="android:textColor">@color/light_text</item>
    </style>

    <style name="SolarProgressBarDeviceTheme" parent="SolarProgressBar">
        <item name="android:progressTint">@color/progress_bar_tint</item>
    </style>

    <color name="section_background_transparent_colour">@color/white</color>
</resources>